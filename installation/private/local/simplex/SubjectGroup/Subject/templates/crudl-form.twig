{% extends '@share/Erp/templates/crudl-form.twig' %}

{% import '@share/templates/form/macros.twig' as formMacros %}

{% block head %}
    {{ parent() }}
    {{ formMacros.setUpForm(
        _context,
        {
            'assets': []
        }) }}
{% endblock %}

{% block modelInputs %}
    {{ formMacros.DISPLAYMACRONAME(
    {
        'name': 'FIELD-NAME',
        'value': record.FIELD-NAME,
        'label': getLabel(labels, subject, 'fields', 'FIELD-NAME'),
        'help': fieldsLabels.FIELD-NAMEHelp,
        'autofocus': true,
        'disabled': action == 'delete-form',
        'maxlength': FIELD-MAX-LENGTH,
        'autocomplete': '',
        'class': '',
        'validation': {
            'required': true,
            'pattern': ''
        }
    }
    ) }}
{% endblock %}
