{% extends '@local/templates/application.twig' %}

{# the following blocks are defined here so that content defined into Erp/frame.twig can be overridden #}
{% set logoPath = '/PATH/TO/MASTHEAD/LOGO/IMAGES' %}
{% set logoLink = false %}
{% block headerLogo %}
{% endblock %}

{% set hideSideBar = false %}
{% set sideBarToggleLabels = false %}
{% set hideHeaderTitle = false %}
{% set hideHeaderUser = false %}
{#
  customSideBarMenu can be array used to display a custom sidebar menu whose elements are:
  0 => block name
  0 => full path to template that contains block
#}
{% set customSideBarMenu = false %}

{% block headerTitle %}
{% endblock %}

{% block headerUser %}
{% endblock %}

{% set areaNavigationLabels = {
    'NAVIGATION-KEY': 'NAVIGATINO-KEY-LABEL'|trans
} %}

{% block head %}
    {{ parent() }}
    <!-- Bootstrap -->
    <link rel="stylesheet" href="/public/local/simplex/Backend/css/bootstrap.min.css">
    <script src="{{ 'bootstrap/dist/js/bootstrap.bundle.min.js'|pathToNpmAsset }}"></script>
    <!-- Area assets, includes ERP style -->
    <link rel="stylesheet" href="{{ 'simplex/Backend/css/backend.min.css'|pathToLocalAsset }}">
{% endblock %}
