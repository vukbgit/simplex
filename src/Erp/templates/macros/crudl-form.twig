{##
# Displays record primary key values into hidden form fields
##}
{% macro displayPrimaryKeyInput(context, model) %}
    <input type="hidden" name="{{ model.getConfig().primaryKey }}" value="{{ attribute(context.routeParameters, model.getConfig().primaryKey) }}">
{% endmacro %}

{##
# Displays form buttons for cancel and submit
##}
{% macro displayDefaultButtons(context) %}
<div class="form-group" role="group">
    <a href="{{ buildRouteToActionFromRoot('list') }}" class="btn btn-secondary text-capitalize">{{ attribute(context.actionsLabels, 'cancel') }}</a>
    <button type="submit" class="btn btn-success text-capitalize">{{ attribute(context.actionsLabels, context.action) }}</button>
</div>
{% endmacro %}
