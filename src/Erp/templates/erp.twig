{# extends area template #}
{% extends pathToAreaTemplate %}

{% use '@share/templates/blocks.twig' %}

{# include subject and ancestors labels #}

{% block body %}
    {{ include(getInstanceTemplate(null, 'labels.twig'), {'labels': labels}, with_context = false) }}
    {% for ancestor in ancestors %}
        {{ include(getInstanceTemplate(ancestor.controller, 'labels.twig'), {'labels': labels}, with_context = false) }}
    {% endfor %}
    {{ parent() }}
{% endblock %}


{% block head %}
    {{ parent() }}
    {% block cookiesAssets %}
        {{ parent() }}
    {% endblock %}
    <!-- ERP assets -->
    <link rel="stylesheet" href="/public/share/simplex/Erp/css/erp.min.css">
    <script type="text/javascript" src="/public/share/simplex/Erp/js/erp.js"></script>
    <!-- Fontello icons -->
    <link rel="stylesheet" href="/public/share/simplex/Erp/Fontello/css/fontello.css">
{% endblock %}

{# messages & labels #}
{% set actionsLabels = {
    'list': 'list'|trans,
    'insert-form': 'insert'|trans,
    'update-form': 'update'|trans,
    'delete-form': 'delete'|trans,
    'cancel': 'cancel'|trans,
    'move-up': 'move up'|trans,
    'move-down': 'move down'|trans
} %}
{% set alertMessages = {
    'save_success': 'Record saved'|trans,
    'delete_success': 'Record deleted'|trans,
    'SQLSTATE_23000_duplicate_entry': 'There is already another record with the same %s'|trans,
    'SQLSTATE_23000_fk_constraint': 'Missing value for mandatory foreign key %s'|trans,
    'SQLSTATE_42S22_column_not_found': 'Column "%s" not found'|trans
} %}
{% set tableLabels = {
    'sort-asc': 'sort ascending'|trans,
    'sort-desc': 'sort descending'|trans,
} %}
